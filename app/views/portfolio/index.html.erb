<main class="portfolio">
  <img class="best" src="https://i.ibb.co/RkGtP9jk/bass-music.png" />
  <div class="content">
    <h2>My Projects</h2>
    <div class="projects">
      <% @projects.each do |project| %>
        <div class="project">
          <%= image_tag project[:image] %>
          <h3><%= project[:name] %></h3>
          <p><%= project[:description] %></p>
        </div>
      <% end %>
    </div>
  </div>
</main>